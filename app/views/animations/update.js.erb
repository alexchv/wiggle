$("#animation-<%=@animation.id%>").replaceWith("<%= j(render({:partial => 'animations/partials/animation', :locals => {:animation => @animation} })) %>");

<% unless @animation.errors.any? %>
    Wiggle.Classes.Alert.success('<%= flash.notice %>');
<% end %>

Wiggle.app.bindClasses($("#animation-<%=@animation.id%>"));

window.lazyModal.close();

if (window.lazyModal) {
    <% if @animation.errors.any? %>
        $(".create-animation").replaceWith("<%= j(render({:partial => 'animations/partials/form_modal', :locals => {:animation => @animation} })) %>");
    <% else %>
        window.lazyModal.close();
    <% end %>
}

