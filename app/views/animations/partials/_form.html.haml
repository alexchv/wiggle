= simple_form_for(animation, :url => animation_path(animation), :remote => true, :html => {:method => :put}) do |f|
  -#= f.hidden_field(:authenticity_token, :value => form_authenticity_token, :name => :authenticity_token)
  .col-md-4.col-md-offset-3.col-lg-4
    .form-group
      %label Animation name
      = f.input(:name, :label => false)
    .form-group
      %label ID or Class name
      = f.input(:html_attribute, :label => false)
  .col-md-5.col-lg-4
    .form-group
      %label Animation type
      .custom-select
        = f.association(:animation_type, :include_blank => false, :label => false, :wrapper => false, :input_html => {:class => 'form-control'})
    %ul.list-inline
      %li.form-group
        %label Duration
        = f.input(:duration, :label => false)
      %li.form-group
        %label Delay
        = f.input(:delay, :label => false)
      %li.form-group
        %label Count
        .custom-select
          = f.input(:count, :label => false, :include_blank => false, :wrapper => false, :collection => Animation.counts.keys, :input_html => {:class => 'form-control'})
  .col-md-10.col-md-offset-2.col-lg-9
    .submit-form-group.form-group
      .cancel-animation
        -#%button{:method => :delete}
        -#  %span.glyphicon.glyphicon-trash{"aria-hidden" => "true"}
        -#  Delete
        = delete_button(animation)
      = f.button(:submit, 'Save', :wrapper => false, :class => 'submit-changes')
